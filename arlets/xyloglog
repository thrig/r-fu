# r-fu arlet template - install to ARLET_DIR directory

xy=read.table("{$args[0]}")

{$device}(file="{$args[1]}", bg="white", width={$width}, height={$height});

plot(xy,type='b',lwd=2,pch=20,xlab='{$xlabel//"X (log)"}',ylab='{$ylabel//"Y (log)"}',log="xy",tcl=-0.25,bty='n')
lines(lowess(xy),col='purple',lty=2,lwd=2)

dev.off()
